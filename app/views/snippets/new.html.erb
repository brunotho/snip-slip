<div id="add-snippet-form-wrapper">
  <div id="add-snippet-form-content">
    <h3 class="mb-4 mt-4">Add Lyric Snippet</h3>
    <%= simple_form_for @lyric_snippet, url: snippets_path, data: { turbo: false } do |f| %>
      <%= f.input :snippet, label: false, input_html: { placeholder: "Snippet" } %>
      <%= f.input :artist, label: false, input_html: { placeholder: "Artist" } %>
      <%= f.input :song, label: false, input_html: { placeholder: "Song" } %>
      <%= f.input :language, collection: LyricSnippet.languages, selected: "English", label: false, input_html: { placeholder: "Language" } %>
      <div id="difficulty-slider-container"></div>
      <div class="d-flex justify-content-end">
        <%= f.button :submit, 'Submit', class: "btn btn-accent mt-4" %>
      </div>
    <% end %>
  </div>
</div>
