<div class="container form-container" style="max-width: 400px">
  <h2>Log into SnipSlip</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: { turbo: false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", placeholder: "Email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password", placeholder: "Password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-login" %>
    </div>
  <% end %>

  <div class="link-container d-flex justify-content-center mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
